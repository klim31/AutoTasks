<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CalculatorSuite" parallel="tests" thread-count="5">


    <test name="Sum tests">
        <parameter name="negativeVal1" value="2"/>
        <parameter name="negativeVal2" value="3"/>
        <parameter name="negativeVal3" value="4"/>
        <groups>
            <run>
                <include name="Double Values Sum"/>
                <include name="Long Values Sum"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.SumTest"/>
        </classes>
    </test>

    <test name="Sub tests">
        <parameter name="negativeVal1" value="6"/>
        <parameter name="negativeVal2" value="5"/>
        <parameter name="negativeVal3" value="2"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.SubTest"/>
        </classes>
    </test>

    <test name="Pow tests">
        <parameter name="negativeVal1" value="2.0"/>
        <parameter name="negativeVal2" value="3.0"/>
        <parameter name="negativeVal3" value="5.0"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.PowTest"/>
        </classes>
    </test>

    <test name="Multi tests">
        <parameter name="negativeVal1" value="2"/>
        <parameter name="negativeVal2" value="3"/>
        <parameter name="negativeVal3" value="5"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.MultiTest"/>
        </classes>
    </test>


    <test name="IsPositive tests">
        <parameter name="negativeVal1" value="1"/>
        <parameter name="negativeVal2" value="false"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.IsPositiveTest"/>
        </classes>
    </test>

    <test name="Tg tests">
        <parameter name="Value1" value="0"/>
        <parameter name="Value2" value="NaN"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.TgTest"/>
        </classes>
    </test>

    <test name="Ctg tests">
        <parameter name="Value1" value="90.0"/>
        <parameter name="Value2" value="1"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.CtgTest"/>
        </classes>
    </test>

    <test name="Sqrt tests">
        <parameter name="negativeVal1" value="-2"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.SqrtTest"/>
        </classes>
    </test>

    <test name="Timeout tests">
        <parameter name="Time" value="2"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.TimeoutTest"/>
        </classes>
    </test>

    <test name="IsNegative tests">
        <classes>
            <class name="com.epam.starikov.tat.module4.scenarios.IsNegativeTest"/>
        </classes>
    </test>

</suite>