<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CalculatorSuite" parallel="tests" thread-count="5">


    <test name="Sum tests">
        <parameter name="negativeVal1" value="2"/>
        <parameter name="negativeVal2" value="3"/>
        <parameter name="negativeVal3" value="4"/>
        <groups>
            <run>
                <include name="Group1"/>
            </run>
        </groups>
        <classes>
            <class name="com.epam.starikov.tat.module4.SumTest"/>
        </classes>
    </test>

    <test name="Sub tests">
        <parameter name="negativeVal1" value="6"/>
        <parameter name="negativeVal2" value="5"/>
        <parameter name="negativeVal3" value="2"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.SubTest"/>
        </classes>
    </test>

    <test name="Multi tests">
        <parameter name="negativeVal1" value="2"/>
        <parameter name="negativeVal2" value="3"/>
        <parameter name="negativeVal3" value="5"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.MultiTest"/>
        </classes>
    </test>


    <test name="IsPositive tests">
        <parameter name="negativeVal1" value="1"/>
        <parameter name="negativeVal2" value="false"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.IsPositiveTest"/>
        </classes>
    </test>

    <test name="Sqrt tests">
         <parameter name="negativeVal1" value="-2"/>
        <classes>
            <class name="com.epam.starikov.tat.module4.SqrtTest"/>
        </classes>
    </test>

</suite>